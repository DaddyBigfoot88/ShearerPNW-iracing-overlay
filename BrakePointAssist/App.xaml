<Application x:Class="ShearerPNW.iRacingOverlay.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- ShearerPNW Professional Racing Theme -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- You can add additional resource dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Color Palette -->
            <SolidColorBrush x:Key="ShearerPNW.Red" Color="#FFE31E24"/>
            <SolidColorBrush x:Key="ShearerPNW.Orange" Color="#FFFF6600"/>
            <SolidColorBrush x:Key="ShearerPNW.Green" Color="#FF00FF66"/>
            <SolidColorBrush x:Key="ShearerPNW.DarkBackground" Color="#FF0A0A0A"/>
            <SolidColorBrush x:Key="ShearerPNW.MediumBackground" Color="#FF1A1A1A"/>
            <SolidColorBrush x:Key="ShearerPNW.LightBackground" Color="#FF2A2A2A"/>
            <SolidColorBrush x:Key="ShearerPNW.BorderColor" Color="#FF3A3A3A"/>
            <SolidColorBrush x:Key="ShearerPNW.TextPrimary" Color="#FFCCCCCC"/>
            <SolidColorBrush x:Key="ShearerPNW.TextSecondary" Color="#FF888888"/>
            
            <!-- Global Styles -->
            <Style TargetType="Window">
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="Background" Value="{StaticResource ShearerPNW.DarkBackground}"/>
                <Setter Property="Foreground" Value="{StaticResource ShearerPNW.TextPrimary}"/>
            </Style>
            
            <!-- Modern Button Style -->
            <Style x:Key="ModernButton" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource ShearerPNW.LightBackground}"/>
                <Setter Property="Foreground" Value="{StaticResource ShearerPNW.TextPrimary}"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="BorderBrush" Value="{StaticResource ShearerPNW.BorderColor}"/>
                <Setter Property="Padding" Value="15,8"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource ShearerPNW.BorderColor}"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource ShearerPNW.Orange}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="{StaticResource ShearerPNW.MediumBackground}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Primary Action Button -->
            <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
                <Setter Property="Background" Value="{StaticResource ShearerPNW.Red}"/>
                <Setter Property="BorderBrush" Value="{StaticResource ShearerPNW.Red}"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#FFFF3339"/>
                        <Setter Property="BorderBrush" Value="#FFFF3339"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Success Button -->
            <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
                <Setter Property="Background" Value="{StaticResource ShearerPNW.Green}"/>
                <Setter Property="BorderBrush" Value="{StaticResource ShearerPNW.Green}"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#FF00CC55"/>
                        <Setter Property="BorderBrush" Value="#FF00CC55"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Panel Style -->
            <Style x:Key="OverlayPanel" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource ShearerPNW.LightBackground}"/>
                <Setter Property="BorderBrush" Value="{StaticResource ShearerPNW.BorderColor}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="15"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="#FF000000" BlurRadius="8" ShadowDepth="2"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Tab Button Style -->
            <Style x:Key="TabButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
                <Setter Property="Margin" Value="2,0"/>
                <Setter Property="Padding" Value="20,10"/>
            </Style>

            <!-- Active Tab Button -->
            <Style x:Key="ActiveTabButton" TargetType="Button" BasedOn="{StaticResource TabButton}">
                <Setter Property="Background" Value="{StaticResource ShearerPNW.Orange}"/>
                <Setter Property="BorderBrush" Value="{StaticResource ShearerPNW.Orange}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
