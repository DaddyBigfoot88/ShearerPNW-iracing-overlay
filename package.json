{
  "name": "iracing-overlay",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:vite\" \"npm:dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build:ui": "vite build",
    "build:win": "npm run build:ui && electron-builder -w",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.yourname.iracingoverlay",
    "productName": "iRacing Overlay",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "electron/**",
      "public/**"
    ],
    "win": {
      "target": [
        "portable"
      ],
      "icon": "public/icon.ico"
    }
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.15.4",
    "papaparse": "^5.5.3",
    "framer-motion": "^11.18.2",
    "lucide-react": "^0.471.2",
    "irsdk-node": "^4.0.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "vite": "^5.4.19",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "tailwindcss": "^3.4.17",
    "postcss": "^8.5.6",
    "autoprefixer": "^10.4.21"
  }
}